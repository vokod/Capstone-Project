<resources>

    <!-- Base application theme. -->

    <style name="PrimaryPropertyValue" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="PrimaryPropertyUnit" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">sans</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="PrimaryPropertyLabel" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">sans</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:layout_marginTop">36dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="SecondaryPropertyValue" parent="PrimaryPropertyValue">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="SecondaryPropertyUnit" parent="PrimaryPropertyUnit">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SecondaryPropertyLabel" parent="PrimaryPropertyLabel">
        <item name="android:layout_marginTop">28dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="PrimaryPropertyIconValue" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="PrimaryPropertyIconUnit" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">sans</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="PrimaryPropertyIconLabel" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">sans</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:layout_marginTop">36dp</item>
        <item name="android:textAllCaps">true</item>
    </style>


</resources>
