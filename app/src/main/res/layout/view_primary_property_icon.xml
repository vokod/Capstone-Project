<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_icon_duration"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_value_duration"
        android:contentDescription="@string/view_primary_propert_icon_iv_icon_content_desc" />

    <TextView
        android:id="@+id/tv_value_duration"
        style="@style/PrimaryPropertyIconValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:textAlignment="textEnd"
        app:layout_constraintStart_toEndOf="@+id/iv_icon_duration"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="34.5" />

    <TextView
        android:id="@+id/tv_unit_duration"
        style="@style/PrimaryPropertyIconUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="4dp"
        android:textAlignment="textStart"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_value_duration"
        app:layout_constraintStart_toEndOf="@+id/tv_value_duration"
        tools:text="km/h"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/tv_label_duration"
        style="@style/PrimaryPropertyIconLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-2dp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="@+id/tv_value_duration"
        app:layout_constraintTop_toBottomOf="@+id/tv_value_duration"
        tools:text="Speed" />
</android.support.constraint.ConstraintLayout>